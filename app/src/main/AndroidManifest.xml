<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.sensor" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PMDM06"
        tools:targetApi="31">

        <!-- Actividad principal (sin fullscreen si no lo necesitas) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/FullScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Todas las actividades de sensores con FullScreenTheme -->
        <activity
            android:name=".Sensors.LinearAcceleration"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.Gravity"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.Accelerometer"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.MagneticField"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.Gyroscope"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.RelativeHumidity"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.LightSensor"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.AmbientTemperature"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.Orientation"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.Pressure"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.Proximity"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.Temperature"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Sensors.RotationVector"
            android:exported="true"
            android:theme="@style/FullScreenTheme" />
    </application>
</manifest>